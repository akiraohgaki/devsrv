{
  "name": "@akiraohgaki/devsrv",
  "version": "0.8.0",
  "exports": {
    ".": "./mod.ts",
    "./serve": "./serve.ts",
    "./bundle": "./bundle.ts",
    "./export": "./export.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "mod.ts",
      "serve.ts",
      "bundle.ts",
      "export.ts",
      "deno.json",
      "README.md",
      "LICENSE"
    ]
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-module-boundary-types"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "*.ts",
      "*.json",
      "*.md"
    ],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "include": [
      "tests/unit/"
    ]
  },
  "tasks": {
    "check": "deno task check:setup && deno task check:check && deno task check:teardown",
    "check:setup": "deno outdated && deno fmt && deno lint",
    "check:check": "deno check mod.ts serve.ts bundle.ts export.ts",
    "check:teardown": "echo 'Skip task check:teardown'",
    "build": "deno task build:setup && deno task build:build && deno task build:teardown",
    "build:setup": "deno run -A export.ts --includes='tests/demo/index.html' tmp/demo",
    "build:build": "deno run -A bundle.ts --minify=true tests/demo/main.ts tmp/demo/main.bundle.js",
    "build:teardown": "echo 'Skip task build:teardown'",
    "test": "deno task test:setup && deno task test:unit && deno task test:e2e && deno task test:teardown",
    "test:setup": "deno run -A npm:playwright install --with-deps",
    "test:unit": "deno test -A --coverage && deno coverage --html",
    "test:e2e": "deno run -A npm:playwright test",
    "test:teardown": "echo 'Skip task test:teardown'",
    "serve": "deno run -A serve.ts tests/demo"
  },
  "imports": {
    "@david/dax": "jsr:@david/dax@^0.42.0",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@playwright/test": "npm:@playwright/test@^1.49.1",
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/cli": "jsr:@std/cli@^1.0.10",
    "esbuild": "npm:esbuild@^0.24.2"
  },
  "nodeModulesDir": "auto"
}
